@model IEnumerable<Businesses_Accounting.Models.BusinessBanking>

@{
    ViewData["Title"] = "بانک ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="g-col-4 g-col-sm-4">
<p>
    <a asp-action="Create">بانک جدید</a>
</p>

@(
    Html.Kendo().Grid<Businesses_Accounting.Models.BusinessBanking>()
                           .Name("grid")
                           .Columns(columns =>
                           {
                               columns.Bound(model => model.Name);
                               columns.Bound(model => model.Note);
                               columns.Bound(model => model.IsActive);
                               columns.Bound(model => model.Id).Filterable(false).ClientHeaderTemplate(" ")
                               //.ClientTemplate(@"<a href='" + @Url.Action("Edit", "BusinessBankings", new { Id = "#:data.Id#" }) + @"'>Edit</a> |  <a href='" + @Url.Action("Delete", "BusinessBankings", new { Id = "#:data.Id#" }) + @"'>Delete</a>  ").Width(430);
                   .ClientTemplate(@"<a href='" + @Url.Action("Edit", "BusinessBankings", new { Id = "#:data.Id#" }) + @"'>Edit</a> |  <a href='javascript:;' onclick='showDialogDelete(" + @Url.Action("Delete", "BusinessBankings", new { Id = "#:data.Id#" }) + ")'>Delete</a>  ").Width(430);
                           })

                           .Pageable()
                           .Sortable()
                           .Scrollable()
                           //.Groupable()
                           .Filterable()
                           .HtmlAttributes(new { style = "height:550px;" })
                           .DataSource(dataSource => dataSource
                               .Ajax()
                               .PageSize(20)
                               .Read("List", "BusinessBankings")
                            )
       )

</div>