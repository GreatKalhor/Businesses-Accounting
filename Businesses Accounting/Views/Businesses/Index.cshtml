@model IEnumerable<Businesses_Accounting.Models.Business>

@{
    ViewData["Title"] = "کسب وکار ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="g-col-4 g-col-sm-4">
<p>
    <a asp-action="Create">کسب و کار جدید</a>
</p>



@(
Html.Kendo().Grid<Businesses_Accounting.Models.Business>()
                           .Name("grid")
                           .Columns(columns =>
                           {
                               columns.Bound(model => model.LogoUrl).ClientHeaderTemplate(" ").Filterable(false).Sortable(false).ClientTemplate("<div class='image-min-logo'><img class='image-logo-img' src='#:data.LogoUrl#' /></div>").Width(70);
                               columns.Bound(model => model.Name).ClientHeaderTemplate("نام");
                               columns.Bound(model => model.Id).Filterable(false).ClientHeaderTemplate(" ").ClientTemplate(@"<a href='" + @Url.Action("Edit", "Businesses", new { Id = "#:data.Id#" }) + @"'>ویرایش</a> |  <a href='javascript:;' onclick='showDialogDelete(`" + @Url.Action("Delete", "Businesses", new { Id = "#:data.Id#" }) + "`,`آیا از حذف کسب و کار #:data.Name# مطمئن هستی؟`,`با این کار تمام داده های شما حذف میشود`)'>حذف</a> |  <a href='" + @Url.Action("Check", "Dashbord", new { area = "Panel", businessId = "#:data.Id#" }) + @"'>ورود به کسب و کار</a>  ").Width(430);
                          
                })

                           .Pageable()
                           .Sortable()
                           .Scrollable()
                           //.Groupable()
                           .Filterable()
                           .HtmlAttributes(new { style = "height:550px;" })
                           .DataSource(dataSource => dataSource
                               .Ajax()
                               .PageSize(20)
                               .Read("List", "Businesses")
                            )
       )
</div>